version: "3.9"

services:
  sqlserver:
    image: mcr.microsoft.com/mssql/server:2022-latest
    container_name: SMARTSERVER
    platform: linux/amd64
    environment:
      ACCEPT_EULA: "Y"
      PASSWORD: "YOURPASSWORD"
    ports:
      - "5533:1433"   # SMARTSERVER
      - "1433:1433"   # SMARTSERVERV1
    volumes:
      - sqlserver_data:/var/opt/mssql
    healthcheck:
      test: /opt/mssql-tools/bin/sqlcmd -S localhost -U "YOURUSERENVIRONEMENT" -P "YOURPASSWORD" -Q "SELECT 1"
      interval: 10s
      timeout: 5s
      retries: 10

volumes:
  sqlserver_data:
